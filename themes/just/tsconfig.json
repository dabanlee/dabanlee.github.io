{
    "compilerOptions": {
        "baseUrl": ".",
        "sourceMap": true,
        "outDir": "./dist",
        "typeRoots": [
            "./src/"
        ],
        "removeComments": true,
        "target": "es5",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "importHelpers": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@src/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "source/**/*",
    ],
    "exclude": [
        "node_modules",
        "source/dist"
    ],
}